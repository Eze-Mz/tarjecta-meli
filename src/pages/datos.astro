---
import GiftBox from "../components/GiftBox.astro";
import ImgSelector from "../components/ImgSelector.astro";
import SettingsLayout from "../layouts/SettingsLayout.astro";
---

<SettingsLayout title="Recibida Meli!!">
  <main class="w-full relative">
    <div class="mx-auto px-8 pt-6">
      <label
        class="pt-10 m-0 mx-auto font-black leading-none text-center text-transparent bg-clip-text bg-gradient-to-r from-gray-700 via-gray-900 to-black text-[1.5rem] md:text-[2.5rem]"
        for="nombre">Escrib√≠ tu nombre:</label
      >
      <input
        class="w-full mt-4 pl-2 font-black text-transparent bg-clip-text bg-gradient-to-r from-purple-900 to-purple-500 text-[1rem] md:text-[2rem] outline-black/70 placeholder:text-zinc-400"
        type="text"
        name="nombre"
        id="nombre"
        data-input
        placeholder="tu nombre ..."
      />
      <ImgSelector />

      <div class="relative w-[240px] left-1/2 -translate-x-1/2 top-24">
        <GiftBox />
      </div>
    </div>
  </main>
</SettingsLayout>
