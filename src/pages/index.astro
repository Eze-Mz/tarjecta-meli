---
import Layout from "../layouts/Layout.astro";
import GiftBox from "../components/GiftBox.astro";
import Card from "../components/Card.astro";
import ImgSelector from "../components/ImgSelector.astro";
---

<Layout title="regalo!">
  <main class="h-screen w-full overflow-hidden relative">
    <div class="mx-auto px-8 pt-4">
      <label
        class="pt-10 m-0 mx-auto font-black leading-none text-center text-transparent bg-clip-text bg-gradient-to-r from-gray-700 via-gray-900 to-black sm:text-[1.5rem] md:text-[2.5rem]"
        for="nombre">Escrib√≠ tu nombre:</label
      >
      <input
        class="w-full mt-4 pl-2 font-black text-transparent bg-clip-text bg-gradient-to-r from-purple-900 to-purple-500 sm:text-[1rem] md:text-[2rem] outline-black/70"
        type="text"
        name="nombre"
        id="nombre"
        data-input
        placeholder="tu nombre ..."
      />
      <ImgSelector />
      <div class="relative">
        <GiftBox />
      </div>
    </div>
    <div class="absolute top-0 w-full z-[-10] hidden">
      <Card />
    </div>
  </main>
</Layout>
